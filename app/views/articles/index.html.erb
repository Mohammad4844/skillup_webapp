<p style="color: green"><%= notice %></p>

<div class="container mx-auto px-8">
  <div>
  <h1>Articles</h1>
  </div>

  <div id="articles">
    <% @articles.each do |article| %>
      <%= render article %>
      <button class="btn btn-primary">
        <%= link_to "Show this article", article %>
      </button>
    <% end %>
  </div>
  <button class="btn btn-primary">

    <%= link_to "New article", new_article_path %>
  </button>
</div>
